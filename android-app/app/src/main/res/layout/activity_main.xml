<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0a0a0a">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#111111">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â˜  DeadNet"
            android:textColor="#00ff00"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/statusDot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/status_dot_inactive" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Inactive"
            android:textColor="#888888"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Tab Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#0d0d0d"
        android:padding="8dp">

        <Button
            android:id="@+id/tabAttacker"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="âš” Attacker"
            android:textColor="#00ff00"
            android:textSize="12sp"
            android:background="#1a1a1a" />

        <Button
            android:id="@+id/tabDefender"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="ðŸ›¡ Defender"
            android:textColor="#888888"
            android:textSize="12sp"
            android:background="#111111" />
    </LinearLayout>

    <!-- Content Area -->
    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Attacker View -->
        <include
            android:id="@+id/attackerView"
            layout="@layout/view_attacker" />

        <!-- Defender View -->
        <include
            android:id="@+id/defenderView"
            layout="@layout/view_defender"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>
